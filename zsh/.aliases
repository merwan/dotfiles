# Administration
alias update="sudo apt update && sudo apt dist-upgrade --purge"
alias autoremove="sudo apt autoremove --purge"
alias ip='ip --color'
alias ipb='ip --color --brief'

# Docker
alias dk="docker-compose"
alias dkr="docker-compose run --rm"
alias odk="optirun docker-compose"
alias odkr="optirun docker-compose run --rm"

# Git
alias grpo="git remote prune origin"

# Divers
alias ytmp3="yt-dlp -x --audio-format=mp3"
GTG_BASE_DIR="~/.var/app/org.gnome.GTG"
alias gtgwork="ln -snvf $GTG_BASE_DIR-work $GTG_BASE_DIR"
alias gtgperso="ln -snvf $GTG_BASE_DIR-personal $GTG_BASE_DIR"

# Kitty
alias s="kitty +kitten ssh"

[[ -s "$HOME/.aliases-local" ]] && source "$HOME/.aliases-local" # local aliases
