[user]
    name = Merouane Atig
    email = merwan@patem.net
    signingkey = 1310AB38E07F05FB
[color]
    diff = auto
    status = auto
    branch = auto
[alias]
    poule = pull
    st = status
    ci = commit
    co = checkout
    di = diff
    dc = diff --cached
    amend = commit --amend
    aa = add --all
    b = branch
    l = "!. ~/.githelpers && pretty_git_log"
    la = !git l --all
    r = !git l -30
    ra = !git r --all
[push]
    default = simple
[rerere]
    enabled = true
[core]
    pager = delta
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true    # use n and N to move between diff sections
    syntax-theme = Solarized (dark)
[merge]
    conflictstyle = diff3
[diff]
    tool = meld
    colorMoved = default
[diff "gzip"]
    binary = true
    textconv = /bin/zcat
[pull]
    ff = only
[init]
    defaultBranch = main
[commit]
    gpgsign = true
